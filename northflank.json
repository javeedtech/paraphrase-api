{
  "name": "paraphrasing-api",
  "description": "AI-Powered Paraphrasing API for RapidAPI monetization",
  "git": {
    "repoUrl": "https://github.com/your-username/paraphrasing-api",
    "branch": "main"
  },
  "build": {
    "dockerfile": "Dockerfile"
  },
  "env": {
    "SESSION_SECRET": {
      "value": "your-secret-key-change-in-production"
    },
    "HF_TOKEN": {
      "value": "",
      "required": false,
      "description": "Optional: Hugging Face API token for enhanced paraphrasing"
    }
  },
  "ports": [
    {
      "name": "http",
      "port": 5000,
      "protocol": "http"
    }
  ],
  "resources": {
    "cpu": "0.5",
    "memory": "1Gi"
  },
  "scaling": {
    "min": 1,
    "max": 3
  },
  "healthCheck": {
    "path": "/health",
    "port": 5000,
    "initialDelaySeconds": 30,
    "periodSeconds": 10
  }
}